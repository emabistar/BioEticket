@model Cinema
@{
    ViewData["Title"] = "Delete Cinema";
}


<div class="row text">

    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete Confirmation for @Model.Name </h1>
        </p>
    </div>
    <div class="row">

        <div class="col-md-8   offset-2">


            <div class="form-group text-center">
                <img id="CinemaPicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label "></label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label "></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label "></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="confirm" class="btn btn-danger float-right " />
                </form>

                <a class="btn btn-outline-secondary" asp-controller="Cinemas" asp-action="Index">Show All</a>

            </div>


        </div>
    </div>


</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            var output = document.getElementById('ProfilePicturePreview');

            output.src = $("#ProfilePictureURL").val();

        })
        // set the element to show preview pictureUrl
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();

        })

    </script>


}